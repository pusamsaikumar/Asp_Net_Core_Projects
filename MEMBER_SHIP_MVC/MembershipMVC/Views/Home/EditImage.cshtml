
@using MembershipMVC.Models;
@model EditImageView;

@{
    ViewData["Title"] = "Edit";
}
<h5>Edit Image</h5>
<hr/>

<div class="container align-items-center justify-content-center">


        
      
        
        <form method="post" asp-action="EditImage" asp-controller="Home" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
           <div class="form-group">
                <img src="@Model.URL" width="300" height="300" alt="" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="form-label">Image</label>
                <input asp-for="Image" type="file" class="form-control">
            </div>
            <div>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    
   

   
</div>